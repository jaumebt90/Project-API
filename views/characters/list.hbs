<div class="container">
  <h1 class="list">Characters list</h1>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5 my-5">
    {{#each characters}}
      <div class="col">
        <div class="card">
          <img class="pic" src="{{image}}" alt="" />
          <div class="info">
            <h5><u>Name:</u> {{name}}</h5>
            <p><u>Specie:</u> {{species}}</p>
            <p><u>Homeworld:</u> {{homeworld}}</p>
          </div>
          <form class="boton" action="/add-favorite" method="POST">
            <input type="hidden" name="name" value="{{name}}" />
            <input type="hidden" name="species" value="{{species}}" />
            <input type="hidden" name="gender" value="{{gender}}" />
            <input type="hidden" name="homeworld" value="{{homeworld}}" />
            <input type="hidden" name="image" value="{{image}}" />
            <input type="hidden" name="apiId" value="{{id}}" />
            <button class="add" type="submit">Add to Favourites</button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
</div>