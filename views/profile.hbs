<section class="profile">
  <div class="container">
    <h1 class="user">Bienvenido {{user.username}}</h1>
    <div class="row row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5 my-5">
      {{#each user.favorites}}
        <div class="col">
          <div class="card shadow-sm">
            <img class="pic" src={{image}} alt="" />
            <div class="info">
              <h5><u>Name:</u> {{name}}</h5>
              <p><u>Specie:</u> {{species}}</p>
              <p><u>Homeworld:</u> {{homeworld}}</p>
            </div>
            <form class="boton" action="/delete-favorite" method="POST">
              <input type="hidden" name="id" value={{_id}} />

              <button class="delete" type="submit">Delete Favourite</button>
            </form>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>